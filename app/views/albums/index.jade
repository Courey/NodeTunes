extends ../shared/template

block content
  h1 album Index

  #addalbum
    form(method='POST', action='/albums', enctype='multipart/form-data')
      input(type='text', autofocus=true, name='albumName', placeholder='Album Name')
      input(type='file', name='photos')
      button Add album
  #showalbums
    each album in albums
      .album
        .albumName
          span
            a(href='/albums/#{album._id}')= album.name
        .deletealbum
          form(action='/albums/#{album._id}/delete', method='POST')
            button Delete #{album.name}
        .albumPhoto
          span
            img(src='/img/#{album.directory}/#{album.photos}')
